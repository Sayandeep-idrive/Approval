<p id="notice"><%= notice %></p>
<%= render 'search' %>
<h3>List of all books</h3>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.user.email %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<td><%= link_to 'Approve pending users', '/approve' %></td>
<%= link_to('Logout', destroy_user_session_path, method: :delete) %>
