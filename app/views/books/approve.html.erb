<h2>Approve Pending Users</h2>
<table>
  <thead>
    <tr>
      <th>User (email)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= link_to 'Approve', approveDone_path(id: user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Back', admin_path %>
